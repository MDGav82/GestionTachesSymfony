{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <h1>Project</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ project.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ project.startDate ? project.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End_date</th>
                <td>{{ project.endDate ? project.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <h3>Tâches associées</h3>
    <ul>
        {% for task in project.tasks %}
            <li>
                <a href="{{ path('app_task_show', {'id': task.id}) }}">
                    Tâche: {{ task.name }}
                </a>
            </li>
        {% else %}
            <li>Aucune tâche associée</li>
        {% endfor %}
    </ul>

    <a href="{{ path('app_project_index') }}">Back to project list</a>
    <a href="{{ path('app_project_edit', {'id': project.id}) }}">Edit</a>

    {{ include('project/_delete_form.html.twig') }}
{% endblock %}
