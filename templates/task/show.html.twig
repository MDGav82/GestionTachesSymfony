{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <h1>Task</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ task.name }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ task.state }}</td>
            </tr>
            <tr>
                <th>Progress_percent</th>
                <td>{{ task.progressPercent }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ task.startDate ? task.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End_date</th>
                <td>{{ task.endDate ? task.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Associated Project</th>
                <td>
                    {% if task.getAssociatedProject() %}
                        <a href="{{ path('app_project_show', {'id': task.getAssociatedProject().id}) }}">
                            View Project: {{ task.getAssociatedProject().name }}
                        </a>
                    {% else %}
                        No project associated
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_task_index') }}">Back to task list</a>

    <a href="{{ path('app_task_edit', {'id': task.id}) }}">Edit</a>

    {{ include('task/_delete_form.html.twig') }}
{% endblock %}
